<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_email, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", class: "btn btn-info" %>
  </div>
<% end %>